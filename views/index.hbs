<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <form action="/short" method="POST">
        <div class="card text-center">
          <div class="card-header">
            Random Shorten Url
          </div>
          <div class="card-body">
            <img src="https://i.imgur.com/9zh9Eqr.png" alt="" style="width:200px; height:200px">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Url</span>
              </div>
              <input type="text" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default" name="urlName" required>
            </div>
            {{#if shortUrl}}
            <div class="alert alert-info" role="alert">
              <a href="/{{shortUrl}}" id="copyLink">{{shortUrl}}</a>
            </div>
            {{/if}}
          </div>
          <div class="card-footer text-muted">
            <button class="btn btn-success" type="submit">Generate Shorten Url</button>
            <input type="button" class="btn btn-info" onclick="copyLink()" data-toggle="tooltip"
              title="Copy to Clipboard" value="copy link" readonly />
          </div>
        </div>
      </form>
    </div>
  </div>

  <script>
    function copyLink() {
      let copyLink = document.getElementById("copyLink")
      let selection = window.getSelection();
      let range = document.createRange();
      range.selectNodeContents(copyLink);
      selection.removeAllRanges();
      selection.addRange(range);
      document.execCommand('copy');
    }
  </script>